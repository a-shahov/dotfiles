@lazy.function
def togroup_and_switch(qtile, prompt="to_and_switch", widget="prompt"):
    """
    Launch prompt widget to move current window to a given group
    and to switch to a given group
    """
    def func(group):
        if group:
            with suppress(KeyError):
                qtile.groups_map[group].toscreen()
            qtile.move_to_group(group)
                
    if not qtile.current_window:
        logger.warning("No window to move")
        return

    if not (mb := qtile.widgets_map.get(widget)):
        logger.error("No widget named '%s' present.", widget)
        return

    mb.start_input(prompt, func, "group", strict_completer=True)

_old_layouts = {
    "zoomy": {},
    "max": {},
}

@lazy.function
def toggle_layout(qtile, layout_name, layouts, old_layouts):
    key = (qtile.current_screen.info()["index"], qtile.current_group.info()["name"]) 
    current_layout_name = qtile.current_layout.info()["name"]
    current_layout = {key: current_layout_name}
    old_layout_name = old_layouts.pop(key, None)

    if current_layout_name == layout_name and not old_layout_name:
        return

    if current_layout_name == layout_name and old_layout_name:
        for layout in layouts:
            if layout.name == old_layout_name:
                qtile.to_layout_index(layouts.index(layout))
                return
        else:
            logger.warning(
                "Unexpected behaviour in toggle_layout current layout: '%s' old_layout: '%s'",
                current_layout_name, old_layout_name,
            )
            return

    for layout in layouts:
        if layout.name == layout_name:
            qtile.to_layout_index(layouts.index(layout))
            old_layouts.update(current_layout)
            return
    
    logger.warning(
        "Unexpected behaviour in toggle_layout current layout: '%s' old_layout: '%s'",
        current_layout_name, old_layout_name,
    )
 
